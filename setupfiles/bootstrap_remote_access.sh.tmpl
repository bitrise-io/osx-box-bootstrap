#!/usr/bin/env bash

set -e

#change vagrant user password
sudo dscl . passwd /Users/vagrant {{.Password}}

#enable ssh password authentication
sudo sed -i "" "s|[#]*PasswordAuthentication yes|PasswordAuthentication yes|g; s|[#]*PasswordAuthentication no|PasswordAuthentication yes|g" /private/etc/ssh/sshd_config

#restart ssh service
sudo launchctl stop com.openssh.sshd
sudo launchctl start com.openssh.sshd


### Setup ngrok
# create ngrok config
NGROK_CONF=$(cat <<EOC
authtoken: {{.Token}}
log_format: logfmt
log: /var/log/ngrok.log
tunnels:
  remote-access:
    proto: tcp
    addr: 22
    remote_addr: {{.SSHAddress}}
  #vnc-server:
  #  proto: tcp
  #  addr: 5900
  #  remote_addr: {{.VNCAddress}}

EOC
)

echo "$NGROK_CONF" | sudo tee /etc/ngrok/ngrok.yml

# install and start ngrok as a service
sudo ngrok service install -config /etc/ngrok/ngrok.yml
sudo ngrok service start
